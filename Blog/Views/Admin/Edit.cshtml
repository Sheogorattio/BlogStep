@model EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}

<div class="container px-4 py-5" id="hanging-icons">
    <h2 class="pb-2 border-bottom">Редактирование пользователя</h2>
    <a class="link-redirect" asp-controller="Home" asp-action="Index">Главная</a> / <a class="link-redirect" asp-controller="Users" asp-action="Index">Все пользователи</a>

    <div class="row g-4 py-5 row-cols-1">
        <div class="mb-4 rounded-3 ">
            <form asp-controller="Admin" asp-action="Edit" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group mb-2">
                    <input type="hidden" asp-for="Id" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Name" class="control-label">Имя</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="Phone" class="control-label">Номер телефона</label>
                    <input type="text" asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone"></span>
                </div><br />

                <div class="form-group">
                    @Html.AntiForgeryToken()
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}